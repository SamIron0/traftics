{
  "name": "session-recorder",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm build:types && pnpm -r build",
    "build:types": "pnpm --filter @session-recorder/types build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.15.4"
  }
}
