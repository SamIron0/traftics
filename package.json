{
  "name": "session-recorder",
  "private": true,
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm build:types && pnpm build:tracker && pnpm build:web",
    "build:types": "pnpm --filter @session-recorder/types build",
    "build:tracker": "pnpm --filter @session-recorder/tracker build",
    "build:web": "pnpm --filter web build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "deploy": "bash infrastructure/scripts/deploy.sh all",
    "deploy:tracker": "bash infrastructure/scripts/deploy.sh tracker",
    "deploy:web": "bash infrastructure/scripts/deploy.sh web"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.15.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.46.1"
  }
}
